---
import BaseLayout from '../layouts/BaseLayout.astro';

const milestones = [
  {
    year: '2021',
    label: 'Insight',
    body: "Keyur Patel, working at the intersection of optics and the diamond trade, notices a glaring gap: every diamantaire he meets carries stones in his pocket to show buyers in real light. Online, those same stones look completely different — cold, flat, disconnected.",
  },
  {
    year: '2022',
    label: 'First prototype',
    body: "Eighteen months of optical research and hardware iteration. The first FacetView light box is assembled in Surat. The spectral output matches CIE D65 daylight within 5% across 360–760 nm. Internal tests confirm colour rendering nobody had seen on a screen before.",
  },
  {
    year: '2023',
    label: 'DPIIT recognition',
    body: "Facetview Imaging Technologies Pvt. Ltd. is registered and recognised by the Government of India's Department for Promotion of Industry and Internal Trade — DIPP150567. Seed funding secured to take the widget to market.",
  },
  {
    year: '2024',
    label: 'Market launch',
    body: "First paying clients — online diamond retailers and B2B memo platforms. The embeddable widget goes live. Buyer return rates begin to fall. The six-view standard starts to spread across the trade.",
  },
  {
    year: '2026',
    label: 'JCK Las Vegas',
    body: "FacetView presents at JCK Las Vegas, the world's leading jewellery trade show — taking the six-view standard to a global audience for the first time.",
  },
];

const values = [
  {
    icon: `<path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z"/><path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>`,
    title: 'Truth over optics',
    body: "We optimise for accuracy, not flattery. The image you see on a FacetView widget is the closest thing to holding the stone in natural daylight.",
  },
  {
    icon: `<path stroke-linecap="round" stroke-linejoin="round" d="M9.75 3.104v5.714a2.25 2.25 0 01-.659 1.591L5 14.5M9.75 3.104c-.251.023-.501.05-.75.082m.75-.082a24.301 24.301 0 014.5 0m0 0v5.714c0 .597.237 1.17.659 1.591L19.8 15M14.25 3.104c.251.023.501.05.75.082M19.8 15l-1.575.8A23.926 23.926 0 0112 17.25a23.926 23.926 0 01-6.225-.95L4.2 15m15.6 0l1.8.9M4.2 15l-1.8.9M12 17.25V21"/>`,
    title: 'Science, not marketing',
    body: "Every design decision — light spectrum, illumination angle, capture algorithm — follows published standards from AGA, GIA, ISO 24016:2020 and CIE.",
  },
  {
    icon: `<path stroke-linecap="round" stroke-linejoin="round" d="M13.19 8.688a4.5 4.5 0 011.242 7.244l-4.5 4.5a4.5 4.5 0 01-6.364-6.364l1.757-1.757m13.35-.622l1.757-1.757a4.5 4.5 0 00-6.364-6.364l-4.5 4.5a4.5 4.5 0 001.242 7.244"/>`,
    title: 'Zero friction integration',
    body: "A widget that requires custom dev work will never reach the entire trade. One script tag, any platform, any stack — that is the only acceptable bar.",
  },
];
---

<BaseLayout
  title="About — Facetview"
  description="Facetview Imaging Technologies — who we are, why we built the six-view diamond imaging standard, and where we're going."
>

  <!-- ═══════════════════════════════════════ HERO ══ -->
  <section class="relative bg-surface-950 text-white overflow-hidden">

    <!-- Halo -->
    <div class="absolute inset-0 pointer-events-none" aria-hidden="true">
      <div class="absolute top-0 left-1/4 w-[600px] h-[400px] bg-brand-700/10 rounded-full blur-[100px]"></div>
    </div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-20 pb-20">
      <div class="max-w-3xl">
        <p class="text-xs font-semibold uppercase tracking-widest text-brand-400 mb-4">About</p>
        <h1 class="font-display text-5xl sm:text-6xl font-semibold text-white leading-[1.1] mb-6">
          Built for the<br />stone, not the screen.
        </h1>
        <p class="text-lg text-surface-400 leading-relaxed">
          Facetview Imaging Technologies is an Indian deep-tech startup on a single mission:
          give every diamond the visual representation it deserves — one that is consistent,
          truthful, and as close to daylight as a pixel can get.
        </p>
      </div>
    </div>
  </section>


  <!-- ═══════════════════════════════════════ PROBLEM ══ -->
  <section class="bg-white py-24 px-4">
    <div class="max-w-7xl mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">

        <!-- Image -->
        <div class="rounded-2xl overflow-hidden border border-surface-200 shadow-xl shadow-surface-900/5">
          <img
            src="/assets/comparison-light-sources.png"
            alt="Same diamond photographed under three light sources: Natural Daylight, FacetView Light, and Office Grading Light — colour shifts dramatically between them"
            loading="lazy"
            class="w-full"
          />
          <p class="px-4 py-3 text-xs text-surface-400 bg-surface-50 border-t border-surface-200">
            Same stone. Three light sources. Three completely different diamonds.
          </p>
        </div>

        <!-- Text -->
        <div>
          <p class="text-xs font-semibold uppercase tracking-widest text-brand-700 mb-3">The problem</p>
          <h2 class="font-display text-4xl sm:text-5xl font-semibold text-surface-900 mb-6">
            Every photo lies.<br />Ours don't.
          </h2>
          <div class="space-y-4 text-surface-600 leading-relaxed">
            <p>
              A diamond purchased online is photographed under a grading lamp —
              a cold, clinical light source that maximises contrast for gemmologists.
              Your customer will never look at that stone under a grading lamp.
              They will look at it indoors, in soft warm light, 90% of the time.
            </p>
            <p>
              The result is a structural mismatch between expectation and reality.
              Returns. Disputes. Broken trust. The memo system was built to manage
              this uncertainty — because no image had ever solved it.
            </p>
            <p class="font-medium text-surface-800">
              FacetView solves it. With light calibrated to natural daylight,
              six distinct views, and sub-0.1 mm resolution — in an embeddable
              widget that requires no app, no plugin, no custom code.
            </p>
          </div>
        </div>

      </div>
    </div>
  </section>


  <!-- ═══════════════════════════════════════ FOUNDER ══ -->
  <section class="bg-surface-50 border-y border-surface-200 py-24 px-4">
    <div class="max-w-7xl mx-auto">

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-start">

        <!-- Photo -->
        <div class="flex flex-col gap-6">
          <div class="rounded-2xl overflow-hidden border border-surface-200 shadow-lg max-w-sm">
            <img
              src="/assets/photo-founder-keyur-patel.png"
              alt="Keyur Patel — Founder & Director, Facetview Imaging Technologies"
              loading="lazy"
              class="w-full"
            />
          </div>
          <div class="max-w-sm">
            <p class="font-semibold text-surface-900 text-lg">Keyur Patel</p>
            <p class="text-brand-700 text-sm font-medium mb-3">Founder & Director</p>
            <a
              href="mailto:keyur@facetview.net"
              class="inline-flex items-center gap-2 text-sm text-surface-500 hover:text-brand-700 transition-colors"
            >
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
                <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
              </svg>
              keyur@facetview.net
            </a>
          </div>
        </div>

        <!-- Bio -->
        <div>
          <p class="text-xs font-semibold uppercase tracking-widest text-brand-700 mb-3">Founder</p>
          <h2 class="font-display text-4xl sm:text-5xl font-semibold text-surface-900 mb-6">
            Optician.<br />Diamantaire.<br />Builder.
          </h2>
          <div class="space-y-4 text-surface-600 leading-relaxed">
            <p>
              Keyur Patel has spent his career at the junction of two worlds —
              precision optics and the global diamond trade. Growing up in Surat,
              the world's diamond polishing capital, he watched craftsmen achieve
              extraordinary precision with light under their hands that a camera
              had never been able to replicate on screen.
            </p>
            <p>
              After years working across the supply chain, Keyur turned the question
              into an engineering problem. What would it take to make a screen tell
              the truth about a diamond? The answer was FacetView — a full-spectrum
              light source, a precision imaging system, and a six-view framework
              developed in close alignment with international gemmological standards.
            </p>
            <p>
              He started with a prototype and a conviction: if the image is accurate,
              the sale is honest. If the sale is honest, returns drop, trust builds,
              and the entire pipeline — from miner to finger — gets cleaner.
            </p>
          </div>
        </div>

      </div>
    </div>
  </section>


  <!-- ═══════════════════════════════════════ TIMELINE ══ -->
  <section class="bg-white py-24 px-4">
    <div class="max-w-7xl mx-auto">

      <div class="text-center mb-16">
        <p class="text-xs font-semibold uppercase tracking-widest text-brand-700 mb-3">History</p>
        <h2 class="font-display text-4xl sm:text-5xl font-semibold text-surface-900">
          From insight to standard.
        </h2>
      </div>

      <div class="relative">

        <!-- Vertical line -->
        <div class="absolute left-4 sm:left-1/2 top-0 bottom-0 w-px bg-surface-200 -translate-x-1/2" aria-hidden="true"></div>

        <ol class="space-y-12">
          {milestones.map(({ year, label, body }, i) => (
            <li class={`relative flex gap-8 ${i % 2 === 0 ? 'sm:flex-row' : 'sm:flex-row-reverse'}`}>

              <!-- Dot -->
              <div class="absolute left-4 sm:left-1/2 -translate-x-1/2 w-3 h-3 rounded-full bg-brand-700 ring-4 ring-white mt-1.5" aria-hidden="true"></div>

              <!-- Spacer (desktop only, alternating sides) -->
              <div class="hidden sm:block sm:w-1/2"></div>

              <!-- Card -->
              <div class="ml-10 sm:ml-0 sm:w-1/2 sm:px-10">
                <div class="inline-flex items-center gap-2 mb-2">
                  <span class="text-2xl font-display font-semibold text-brand-700">{year}</span>
                  <span class="text-xs font-semibold uppercase tracking-widest text-surface-400">{label}</span>
                </div>
                <p class="text-surface-600 leading-relaxed text-sm">{body}</p>
              </div>

            </li>
          ))}
        </ol>
      </div>
    </div>
  </section>


  <!-- ═══════════════════════════════════════ VALUES ══ -->
  <section class="bg-surface-950 text-white py-24 px-4">
    <div class="max-w-7xl mx-auto">

      <div class="text-center mb-16">
        <p class="text-xs font-semibold uppercase tracking-widest text-brand-400 mb-3">Principles</p>
        <h2 class="font-display text-4xl sm:text-5xl font-semibold text-white">
          How we think.
        </h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {values.map(({ icon, title, body }) => (
          <div class="flex flex-col gap-4 p-8 rounded-2xl border border-white/10 bg-white/5 hover:bg-white/8 transition-colors">
            <div class="w-10 h-10 rounded-xl bg-brand-700/20 border border-brand-700/30 flex items-center justify-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-brand-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5" aria-hidden="true">
                <Fragment set:html={icon} />
              </svg>
            </div>
            <h3 class="font-semibold text-white text-lg">{title}</h3>
            <p class="text-sm text-surface-400 leading-relaxed">{body}</p>
          </div>
        ))}
      </div>
    </div>
  </section>


  <!-- ═══════════════════════════════════════ RECOGNITION ══ -->
  <section class="bg-white py-24 px-4">
    <div class="max-w-7xl mx-auto">

      <div class="text-center mb-12">
        <p class="text-xs font-semibold uppercase tracking-widest text-brand-700 mb-3">Recognition</p>
        <h2 class="font-display text-4xl sm:text-5xl font-semibold text-surface-900 mb-4">
          Backed and recognised.
        </h2>
        <p class="text-surface-500 max-w-xl mx-auto">
          Government-certified, industry-validated, and heading to the world stage.
        </p>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 gap-8 max-w-3xl mx-auto">

        <!-- DPIIT -->
        <div class="flex flex-col items-center gap-5 p-8 rounded-2xl border border-surface-200 text-center hover:border-brand-700/30 hover:shadow-lg hover:shadow-brand-700/5 transition-all duration-300">
          <img
            src="/assets/logo-dpiit-startupindia.png"
            alt="DPIIT Startup India"
            loading="lazy"
            class="h-16 w-auto object-contain"
          />
          <div>
            <p class="font-semibold text-surface-900 mb-1">DPIIT Recognised Startup</p>
            <p class="text-sm text-surface-500">Department for Promotion of Industry and Internal Trade, Government of India</p>
            <p class="text-xs text-surface-400 mt-2 font-mono">Reg. DIPP150567</p>
          </div>
        </div>

        <!-- JCK -->
        <div class="flex flex-col items-center gap-5 p-8 rounded-2xl border border-surface-200 text-center hover:border-brand-700/30 hover:shadow-lg hover:shadow-brand-700/5 transition-all duration-300">
          <img
            src="/assets/logo-jck-show.png"
            alt="JCK Las Vegas 2026"
            loading="lazy"
            class="h-16 w-auto object-contain"
          />
          <div>
            <p class="font-semibold text-surface-900 mb-1">JCK Las Vegas 2026</p>
            <p class="text-sm text-surface-500">The world's premier jewellery trade show — FacetView presents the six-view standard to a global audience.</p>
            <p class="text-xs text-brand-700 mt-2 font-medium">Coming 2026</p>
          </div>
        </div>

      </div>
    </div>
  </section>


  <!-- ═══════════════════════════════════════ CTA ══ -->
  <section class="bg-brand-700 py-20 px-4">
    <div class="max-w-3xl mx-auto text-center">
      <h2 class="font-display text-4xl sm:text-5xl font-semibold text-white mb-5">
        Curious? Let's talk.
      </h2>
      <p class="text-brand-100 text-lg mb-10">
        We are always happy to show you a live demo — no deck, no pitch, just diamonds.
      </p>
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <a
          href="mailto:keyur@facetview.net?subject=Demo%20Request"
          class="w-full sm:w-auto inline-flex items-center justify-center gap-2 px-8 py-4 text-base font-semibold text-brand-700 bg-white rounded-xl hover:bg-brand-50 transition-colors shadow-lg"
        >
          Get a Demo
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd"/>
          </svg>
        </a>
        <a
          href="/"
          class="w-full sm:w-auto inline-flex items-center justify-center gap-2 px-8 py-4 text-base font-medium text-white border border-white/30 rounded-xl hover:bg-white/10 transition-colors"
        >
          Back to home
        </a>
      </div>
    </div>
  </section>

</BaseLayout>
